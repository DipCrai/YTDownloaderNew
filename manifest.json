{
    "manifest_version": 3,
    "name": "YTDL",
    "description": "sample extension",
    "version": "0.1",
    "icons": 
    {
        "48": "images/icon-48.png"
    },
    "background": 
    {
        "service_worker": "js/service-worker.js"
    },
    "content_scripts": 
    [
        {
            "matches": 
            [
                "https://music.youtube.com/*"
            ],
            "js": 
            [
                "js/ytm-content-script.js"
            ],
            "css": 
            [
                "css/ytmStyle.css"
            ]
        },
        {
            "matches": 
            [
                "https://www.youtube.com/*"
            ],
            "js": 
            [
                "js/yt-content-script.js"
            ],
            "css": 
            [
                "css/ytStyle.css"
            ]
        }
    ],
    "web_accessible_resources": 
    [
        {
            "resources":
            [
                "images/*"
            ],
            "matches": 
            [
                "https://*.youtube.com/*"
            ]
        }
    ]
}